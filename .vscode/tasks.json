{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "g++",
			"args": [
				"-g",
				"${workspaceFolder}/main.cpp",
                "${workspaceFolder}/mainwindow.c",
                "${workspaceFolder}/mainwindow.cpp",
                "${workspaceFolder}/item.cpp",
                "${workspaceFolder}/query_item.cpp",
                "${workspaceFolder}/classe.cpp",
                "${workspaceFolder}/query_classe.cpp",
                "${workspaceFolder}/banco.cpp",
                "${workspaceFolder}/query_banco.cpp",
                "${workspaceFolder}/tp_orc.cpp",
                "${workspaceFolder}/query_tp_orc.cpp",
                "${workspaceFolder}/tp_banc.cpp",
                "${workspaceFolder}/query_tp_banc.cpp",
                "${workspaceFolder}/novo_item.cpp",
                "${workspaceFolder}/bancos.cpp",
                "${workspaceFolder}/classes.cpp",
                "${workspaceFolder}/nova_classe.cpp",
                "${workspaceFolder}/novo_banco.cpp",
                "${workspaceFolder}/especie.cpp",
                "${workspaceFolder}/atualiza_item.cpp",
                "${workspaceFolder}/printformoperation.cpp",
                "${workspaceFolder}/relatorio_mensal.cpp",
                "${workspaceFolder}/connection.cpp",
                "${workspaceFolder}/extrato_mensal.cpp",
                //"${workspaceFolder}/relatorio_anual.cpp",
                //"${workspaceFolder}/extrato_anual.cpp",
                "-o",
				"${workspaceFolder}/gefin",
                "`pkg-config",
                "--cflags",
                "--libs",
                "gtkmm-3.0",
                "mariadb`",
                "-rdynamic"
            ],
            "options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
                "kind": "build",
                "isDefault": true
            },
			"detail": "Task generated by Debugger.",
            "dependsOrder": "sequence",
            "dependsOn": ["Build Resources"]
		},
		{
            "label": "Build Resources",
            "type": "shell",
            "command": "glib-compile-resources",
            "args": [
                "--target=${workspaceFolder}/mainwindow.c", 
                "--generate-source", 
                "${workspaceFolder}/mainwindow.gresources.xml"
            ]
        }
    ]
}